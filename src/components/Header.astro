---
import { menuMain } from "~/data/menus.js";

const rmTrailingSlash = (path: string): string => {
  return path.endsWith("/") && path.length > 1 
    ? path.slice(0, path.length - 1) 
    : path;
}

const pathname = rmTrailingSlash(Astro.url.pathname);
---

<!-- Sticky Navbar -->
<header x-data="{ open: false }" @keydown.window.escape="open = false"
  class="fixed top-0 left-0 w-full z-50 bg-white/80 backdrop-blur-md shadow-md transition-all">
  <div class="container mx-auto px-4 py-4">
    <nav class="flex items-center justify-between" aria-label="Global">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3">
        <img src="/public/logo1.png" alt="Logo Grafika Printing" class="w-14 h-14 object-contain" />
        <div>
          <p class="font-bold text-2xl text-brand-green leading-none">GPG</p>
          <p class="font-medium text-sm text-gray-600">Grafika Printing Gemilang</p>
        </div>
      </a>

      <!-- Mobile menu button -->
      <div class="lg:hidden">
        <button
          type="button"
          class="inline-flex items-center justify-center rounded-md p-2.5 text-brand-green hover:bg-gray-100 transition"
          @click="open = true"
        >
          <span class="sr-only">Open main menu</span>
          <svg class="size-7" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
        </button>
      </div>

      <!-- Desktop menu -->
      <div class="hidden lg:flex lg:items-center lg:gap-x-10">
        {
          menuMain.map((item) => (
            <a
              href={item.url}
              class={`text-base font-semibold transition duration-200 hover:text-brand-green ${item.highlighted ? "menu-item-highlighted" : ""} ${pathname === item.url ? "menu-item-active text-brand-green underline underline-offset-4" : "text-gray-700"}`}
            >
              {item.name}
            </a>
          ))
        }
      </div>
    </nav>

    <!-- Mobile menu -->
    <div class="lg:hidden fixed inset-0 z-50 bg-white px-6 py-6 overflow-y-auto transition-all duration-300" x-show="open" x-transition x-cloak>
      <div class="flex items-center justify-between">
        <a href="/" class="flex items-center gap-3">
          <img src="/public/logo1.png" alt="Logo Grafika Printing" class="w-14 h-14 object-contain" />
          <div>
            <p class="font-bold text-2xl text-brand-green leading-none">GPG</p>
            <p class="font-medium text-sm text-gray-600">Grafika Printing Gemilang</p>
          </div>
        </a>
        <button type="button" class="text-brand-red p-2.5 hover:bg-gray-100 rounded-md" @click="open = false">
          <span class="sr-only">Close menu</span>
          <svg class="size-7" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="mt-10">
        {
          menuMain.map((item) => (
            <a
              @click="open = false"
              href={item.url}
              class={`block text-center py-3 text-xl font-semibold transition hover:text-brand-green ${item.highlighted ? "menu-item-highlighted w-max mx-auto px-6 py-2" : ""} ${pathname === item.url ? "menu-item-active text-brand-green underline underline-offset-4" : "text-gray-800"}`}
            >
              {item.name}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</header>

<!-- Tambahkan padding atas untuk konten agar tidak ketimpa navbar -->
<main class="pt-24">
  <!-- Konten halaman di sini -->
</main>
